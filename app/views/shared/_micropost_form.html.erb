<%= form_for @micropost, html: {multipart: true} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("microposts_form.compose") %>
  </div>
  <%= f.submit t("microposts_form.post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpg, iamge/gif, image/jpeg, image/png" %>
  </span>
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function(){
    var size_in_megabytes = this.files[0].size/1024/1024;
    if(size_in_megabytes > 5){
      alert(I18n.t('home_page.alert_maximum_image_size'));
    }
  });
</script>
