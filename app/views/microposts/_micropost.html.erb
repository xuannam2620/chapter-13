<li id="micropost-<%= micropost.id %>">
  <%= link_to gavatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamps">
    <%= t "microposts_show.posted" %> <%= time_ago_in_words micropost.created_at %>
      <%= t "microposts_show.ago" %>.
    <% if current_user? micropost.user %>
      <%= link_to t("home_page.delete_micropost"), micropost, method: :delete,
        data: {confirm: t("home_page.delete_confirm")}, class: "text-danger" %>
    <% end %>
  </span>
</li>
